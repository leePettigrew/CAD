<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h2 class="card-title text-center">Forgot your password?</h2>
          <br>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
            </div>

            <div class="actions text-center">
              <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-primary', style: 'width: 50%;' %>
            </div>
          <% end %>

          <br><br>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
